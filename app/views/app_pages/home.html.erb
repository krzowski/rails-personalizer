<div class="calories-main">
  <span id="calories-food-hidden"><%= @food_goal %></span>
  <span id="calories-exercise-hidden"><%= @exercise_goal %></span>

  <div class="calories-eaten">
    <span class="calories-data-title">EATEN</span>
    <div class="calories-data-info">
      <span id="calories-eaten"><%= @food_current %></span>
      <p>KCAL</p>
    </div>
    <div class="calories-canvas-container">
      <canvas id="calories_eaten_canvas" width="44" height=44>
        Sorry, your browser does not support canvas.
      </canvas>
    </div>
  </div>


  <div class="calories-left">
    <div class="calories-left-counter">
      <span id="calories-left-value"><%= @current_food_progress %></span>
      <p>LEFT</p>
    </div>
    <canvas id="calories_left_canvas" width="220" height=220>
      Sorry, your browser does not support canvas.
    </canvas>
  </div>


  <div class="calories-burned">
    <span class="calories-data-title">BURNED</span>
    <div class="calories-data-info">
      <span id="calories-burned"><%= @exercise_current %></span>
      <p>KCAL</p>
    </div>
    <div class="calories-canvas-container">
      <canvas id="calories_burned_canvas" width="44" height=44>
        Sorry, your browser does not support canvas.
      </canvas>
    </div>
  </div>
</div>
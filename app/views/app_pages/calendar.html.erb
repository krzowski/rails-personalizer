<div class="calendar-container">
  <%= week_calendar number_of_weeks: 2 do |date| %>
    <span class="table-cell-date"><%= date.strftime("%d %b") %></span>
    <div class="table-cell-counters">
      <% day = current_user.daily_activities.find_by(date: date) %>
      <% if day %>
        <p class="cell-foods">Eaten<br /><%= day.food_calories %></p>
        <p class="cell-exercises">Burned<br /><%= day.exercise_calories %></p>
      <% else %>
        <p class="cell-foods">Eaten<br />0</p>
        <p class="cell-exercises">Burned<br />0</p>
      <% end %>
    </div>
  <% end %>
</div>

<aside class="activity-options">
  <div class="activity-item" id="activities_show_calendar">Show Calendar</div>
  <div class="activity-item" id="activities_add_food">Add Food</div>
  <div class="activity-item" id="activities_add_exercise">Add Activity</div>
  <div class="activity-item" id="activities_change_goals">Change Goals</div>
</aside>